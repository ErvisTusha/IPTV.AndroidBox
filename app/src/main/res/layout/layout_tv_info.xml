<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target_channel_id"
            android:textSize="150sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/search_opaque"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            />
        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_corner_bg"
            android:id="@+id/channel_list_bar"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            >
            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/next_next_channel_id"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
                <ImageView
                    android:id="@+id/next_next_channel_logo"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/next_next_channel_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical|start"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/next_channel_id"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
                <ImageView
                    android:id="@+id/next_channel_logo"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/next_channel_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical|start"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:id="@+id/current_channel_bar"
                android:background="@drawable/round_corner_bg2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/current_channel_id"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:textColor="@color/search_opaque"
                    android:textSize="20sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
                <ImageView
                    android:id="@+id/current_channel_logo"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/current_channel_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical|start"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/search_opaque"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/prev_channel_id"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
                <ImageView
                    android:id="@+id/prev_channel_logo"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/prev_channel_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical|start"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/prev_prev_channel_id"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
                <ImageView
                    android:id="@+id/prev_prev_channel_logo"
                    android:layout_margin="2dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/prev_prev_channel_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical|start"
                    android:paddingStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="@drawable/round_corner_bg"
        android:id="@+id/tv_info_bar"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        >
        <LinearLayout
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:gravity="start|bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/channel_id_bg"
                android:background="@drawable/round_corner_bg"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:layout_gravity="start"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/channel_id"
                            android:textSize="80sp"
                            android:textColor="@color/search_opaque"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:layout_marginTop="-6dp"
                            />
                        <TextView
                            android:id="@+id/source_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="-10dp"
                            android:padding="2dp"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="3"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/channel_logo"
                            android:layout_margin="2dp"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            />
                        <TextView
                            android:id="@+id/channel_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="40sp"
                            android:layout_marginTop="-7dp"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center"
            android:gravity="bottom|center">
            <LinearLayout
                android:id="@+id/schedule_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/play_icon"
                        android:src="@drawable/play_arrow"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="3dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/current_program_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="end"
                        android:paddingEnd="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/search_opaque"
                        android:textSize="28sp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        />
                    <TextView
                        android:id="@+id/current_program_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="start"
                        android:textColor="@color/search_opaque"
                        android:textSize="28sp"
                        android:paddingEnd="2dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/play_arrow"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="3dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:visibility="invisible"
                        android:contentDescription="playing"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/next_program_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="center"
                        android:paddingEnd="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        />
                    <TextView
                        android:id="@+id/next_program_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="start"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:paddingEnd="2dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/play_arrow"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="3dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:visibility="invisible"
                        android:contentDescription="playing"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/third_program_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="center"
                        android:paddingEnd="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        />
                    <TextView
                        android:id="@+id/third_program_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="start"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:paddingEnd="2dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_time"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:paddingEnd="2dp"
                    />
                <TextView
                    android:id="@+id/network_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:paddingEnd="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>






